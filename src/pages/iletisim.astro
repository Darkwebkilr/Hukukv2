---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
  <div class="min-h-screen bg-gray-50" style='font-family: "Public Sans", "Noto Sans", sans-serif;'>
    <Header />

    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-16">
      <div class="max-w-6xl mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">İletişim</h1>
        <p class="text-xl text-blue-100 max-w-2xl mx-auto">
          Sorularınız, danışmanlık talepleriniz veya işbirliği için bize ulaşın.
        </p>
      </div>
    </section>

    <!-- Main Content -->
    <main class="max-w-6xl mx-auto px-4 py-16">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div class="bg-white p-8 rounded-xl shadow-lg">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">İletişim Bilgileri</h2>
          <div class="space-y-6">
            <div class="flex items-center">
              <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 20 20"><path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path></svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-800">Telefon</h3>
                <p class="text-gray-600">0539 650 24 09</p>
              </div>
            </div>
            <div class="flex items-center">
              <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 20 20"><path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path><path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path></svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-800">E-posta</h3>
                <p class="text-gray-600">enes45838@gmail.com</p>
              </div>
            </div>
            <div class="flex items-center">
              <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path></svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-800">Adres</h3>
                <p class="text-gray-600">Kocaeli / Gölcük</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Hızlı İletişim Butonları -->
        <div class="bg-white p-8 rounded-xl shadow-lg flex flex-col justify-center">
          <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">Hızlı İletişim</h2>
          <div class="space-y-4">
            <a href="https://wa.me/905396502409" target="_blank" class="w-full flex items-center justify-center py-4 px-6 border border-transparent rounded-md shadow-sm text-lg font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-transform transform hover:scale-105">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="mr-3" viewBox="0 0 256 256"><path d="M224,175.94a64,64,0,0,1-43,55.48,40,40,0,0,1-45.34-14.89,105.1,105.1,0,0,1-16.43-35.56,40,40,0,0,1,14.89-45.34,64,64,0,0,1,55.48-43A64,64,0,0,1,224,175.94ZM128,24A104,104,0,1,0,232,128,104.11,104.11,0,0,0,128,24Zm-8,56a8,8,0,0,1,16,0v40h40a8,8,0,0,1,0,16H136v40a8,8,0,0,1-16,0V136H80a8,8,0,0,1,0-16h40Z"></path></svg>
              WhatsApp ile Ulaş
            </a>
            <a href="tel:+905396502409" class="w-full flex items-center justify-center py-4 px-6 border border-transparent rounded-md shadow-sm text-lg font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-transform transform hover:scale-105">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="mr-3" viewBox="0 0 256 256"><path d="M222.39,161.45l-43.1-15.67a16,16,0,0,0-15.17,1.8l-18.41,13.81c-29.53-13.8-52.14-36.4-65.94-65.94l13.81-18.41a16,16,0,0,0,1.8-15.17L79.55,33.61A16,16,0,0,0,64.8,21.83L40.17,26.3a16,16,0,0,0-14.6,15.67A136,136,0,0,0,192,216a15.93,15.93,0,0,0,15.67-14.6l4.47-24.63A16,16,0,0,0,222.39,161.45Z"></path></svg>
              Telefonla Ara
            </a>
          </div>
        </div>
      </div>
    </main>

    <Footer />
  </div>
</Layout>
