---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const post = Astro.props;
const { Content } = await post.render();

function formatDate(date: Date) {
  return date.toLocaleDateString('tr-TR', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

function getReadingTime(readingTime?: number) {
  return readingTime ? `${readingTime} dakika` : 'Belirsiz';
}
---

<Layout>
  <div class="min-h-screen bg-gray-50" style='font-family: "Public Sans", "Noto Sans", sans-serif;'>
    <!-- Header -->
    <header class="bg-white shadow-sm">
      <div class="max-w-6xl mx-auto px-4 py-6">
        <div class="flex items-center justify-between">
          <a href="/" class="text-2xl font-bold text-gray-900">Enes Bey</a>
          <nav class="hidden md:flex space-x-8">
            <a href="/" class="text-gray-600 hover:text-gray-900 transition-colors">Ana Sayfa</a>
            <a href="/blog" class="text-blue-600 font-medium">Blog</a>
            <a href="/hizmetler" class="text-gray-600 hover:text-gray-900 transition-colors">Hizmetler</a>
            <a href="/hakkimizda" class="text-gray-600 hover:text-gray-900 transition-colors">Hakkımızda</a>
            <a href="/iletisim" class="text-gray-600 hover:text-gray-900 transition-colors">İletişim</a>
          </nav>
        </div>
      </div>
    </header>

    <!-- Breadcrumb -->
    <nav class="bg-white border-b">
      <div class="max-w-4xl mx-auto px-4 py-3">
        <div class="flex items-center space-x-2 text-sm text-gray-600">
          <a href="/" class="hover:text-blue-600">Ana Sayfa</a>
          <span>/</span>
          <a href="/blog" class="hover:text-blue-600">Blog</a>
          <span>/</span>
          <span class="text-gray-900">{post.data.title}</span>
        </div>
      </div>
    </nav>

    <!-- Article -->
    <main class="max-w-4xl mx-auto px-4 py-12">
      <article class="bg-white rounded-xl shadow-lg overflow-hidden">
        <!-- Hero Image -->
        {post.data.heroImage && (
          <div class="aspect-video overflow-hidden">
            <img 
              src={post.data.heroImage} 
              alt={post.data.title}
              class="w-full h-full object-cover"
            />
          </div>
        )}

        <!-- Article Header -->
        <header class="p-8 pb-6">
          <!-- Category & Meta -->
          <div class="flex items-center justify-between mb-4">
            <span class="inline-block px-3 py-1 text-sm font-semibold text-blue-600 bg-blue-100 rounded-full">
              {post.data.category.replace('-', ' ').toUpperCase()}
            </span>
            {post.data.featured && (
              <span class="inline-block px-3 py-1 text-sm font-semibold text-yellow-600 bg-yellow-100 rounded-full">
                Öne Çıkan
              </span>
            )}
          </div>

          <!-- Title -->
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 leading-tight">
            {post.data.title}
          </h1>

          <!-- Description -->
          <p class="text-xl text-gray-600 mb-6 leading-relaxed">
            {post.data.description}
          </p>

          <!-- Author & Date Info -->
          <div class="flex items-center justify-between border-t border-gray-200 pt-6">
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center">
                <span class="text-white font-semibold text-lg">
                  {post.data.author.charAt(0)}
                </span>
              </div>
              <div>
                <p class="font-semibold text-gray-900">{post.data.author}</p>
                <p class="text-sm text-gray-600">Avukat</p>
              </div>
            </div>
            
            <div class="text-right">
              <p class="text-sm text-gray-600">
                {formatDate(post.data.pubDate)}
              </p>
              <p class="text-sm text-gray-500">
                {getReadingTime(post.data.readingTime)} okuma
              </p>
            </div>
          </div>
        </header>

        <!-- Article Content -->
        <div class="px-8 pb-8">
          <div class="prose prose-lg max-w-none prose-headings:text-gray-900 prose-p:text-gray-700 prose-a:text-blue-600 prose-strong:text-gray-900 prose-ul:text-gray-700 prose-ol:text-gray-700">
            <Content />
          </div>

          <!-- Tags -->
          {post.data.tags.length > 0 && (
            <div class="mt-8 pt-8 border-t border-gray-200">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Etiketler</h3>
              <div class="flex flex-wrap gap-2">
                {post.data.tags.map((tag) => (
                  <span class="inline-block px-3 py-1 text-sm text-gray-600 bg-gray-100 rounded-full hover:bg-gray-200 transition-colors cursor-pointer">
                    #{tag}
                  </span>
                ))}
              </div>
            </div>
          )}
        </div>
      </article>

      <!-- Related Articles -->
      <section class="mt-16">
        <h2 class="text-2xl font-bold text-gray-900 mb-8">İlgili Makaleler</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Bu kısım dinamik olarak doldurulacak -->
          <div class="bg-white rounded-xl shadow-lg p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">
              <a href="/blog" class="hover:text-blue-600 transition-colors">
                Diğer blog yazılarını keşfedin
              </a>
            </h3>
            <p class="text-gray-600">
              Hukuk alanındaki diğer güncel konular hakkında daha fazla bilgi edinin.
            </p>
          </div>
        </div>
      </section>

      <!-- Contact CTA -->
      <section class="mt-16 bg-blue-50 rounded-xl p-8 text-center">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Hukuki Danışmanlık İhtiyacınız mı Var?</h2>
        <p class="text-gray-600 mb-6">
          Bu konuda profesyonel yardıma ihtiyaç duyuyorsanız, bizimle iletişime geçin.
        </p>
        <a 
          href="/iletisim" 
          class="inline-block px-8 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors"
        >
          İletişime Geç
        </a>
      </section>
    </main>
  </div>
</Layout>

<style>
  /* Prose styling for markdown content */
  .prose h1 { 
    font-size: 1.875rem;
    line-height: 2.25rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  .prose h2 { 
    font-size: 1.5rem;
    line-height: 2rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  .prose h3 { 
    font-size: 1.25rem;
    line-height: 1.75rem;
    font-weight: 700;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  .prose h4 { 
    font-size: 1.125rem;
    line-height: 1.75rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  .prose p { 
    margin-bottom: 1rem;
    line-height: 1.625;
  }
  .prose ul { 
    margin-bottom: 1rem;
    padding-left: 1.5rem;
    list-style-type: disc;
  }
  .prose ol { 
    margin-bottom: 1rem;
    padding-left: 1.5rem;
    list-style-type: decimal;
  }
  .prose li { 
    margin-bottom: 0.5rem;
  }
  .prose blockquote { 
    border-left-width: 4px;
    border-left-color: #3b82f6;
    padding-left: 1rem;
    font-style: italic;
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
  }
  .prose code { 
    background-color: #f3f4f6;
    padding: 0.125rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
  }
  .prose pre { 
    background-color: #f3f4f6;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
  }
  .prose a { 
    text-decoration: underline;
  }
  .prose a:hover {
    text-decoration: none;
  }
  .prose strong { 
    font-weight: 600;
  }
  .prose hr { 
    margin-top: 2rem;
    margin-bottom: 2rem;
    border-color: #d1d5db;
  }
</style>